<h1 class="text-primary">Create Event!</h1>
<!--<form action="" method="post" enctype="multipart/form-data">-->

<div class="create-event-form">
    <div class="form-group">
        <div class="event-picture-box" id="event-picture-box">
            <input
                    type="file"
                    id="event-pic-input"
                    name="eventPicture"
                    class="form-control"
                    placeholder="Event Picture"
                    accept="image/*"
                    style="display: none;"
            >
            <img id="event-pic-preview" src="" alt="Preview" style="display: none;">
            <div class="create-event-picture-button">
                <span class="add-picture-plus">+</span><br>Add title picture
            </div>
        </div>
    </div>

    <div class="form-group">
        <select class="form-control" name="category" id="category">
            <option value="" disabled selected>Choose your Category</option>
        </select>
    </div>

    <div class="form-group">
        <input class="form-control" autofocus type="text" name="title" placeholder="Event Title" required>
    </div>

    <div class="form-group">
        <div class="form-floating">
        <input type="date" class="form-control"
                id="datePart"  name="datePart"
                placeholder="Event Date" required>
        <label for="datePart">Event Date</label>
        </div>
    </div>

    <div class="form-group mb-3">
        <div class="form-floating mb-3">
            <input
                    type="time"
                    class="form-control"
                    id="timePart"
                    name="timePart"
                    placeholder=" "
                    required
            >
            <label for="timePart">Event Time</label>
        </div>
    </div>

    <div class="form-group">
        <input class="form-control" type="text" name="description" placeholder="Event Description" required>
    </div>

    <div class="form-group">
        <input class="form-control" type="text" name="location" placeholder="City">
    </div>

    <!-- <div class="form-group">
        <input class="form-control" type="file" accept="image/*" name="eventPicture" placeholder="Event Picture"
               accept="image/*">
    </div> -->

    <div class="form-group d-flex justify-content-center">
        <input class="btn btn-purple btn-primary mb-3" id="submit-event-button" type="submit" value="Submit">
    </div>

</div>