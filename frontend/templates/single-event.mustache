<div class="container">

    <template id="event-template">
        <!-- First Row for Image -->
        <div class="row text-start">
            <!-- Image column -->
            <div class="col-md-6 event-image-container">
                <img class="card-img-top" src="" alt="Event Image" />
            </div>

            <!-- TODO make the join button work for that particular event! -->
            <!-- Event Info Column -->
            <div class="col-md-6 text-start">
                <div class="mb-3">
                    <div class="row">
                        <div class="col" id="event-basic-info-container">
                            <div class="d-flex justify-content-between">
                                <span id="event-title" class="fw-bold"></span>
                                <span id="event-date" class="date-font-color ms-1"></span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span id="event-location" class="date-font-color small"></span>
                                <span id="event-time" class="date-font-color ms-1 small"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <a href="" class="btn btn-purple imin-btn">I'm in!</a>
                        </div>
                        <div class="col-md-8"><!-- spacer --></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div id="event-description-container" class="mb-3 p-3 infobox"></div>
                    </div>
                    <div class="col-md-4"><!-- spacer --></div>
                </div>
            </div>
        </div>
    </template>
    <div id="single-event-container"></div>

    <!-- Comment Box & Participants Row -->
    <div class="row text-start mt-4 align-items-center gx-5">
        <div class="col-md-6 d-flex gap-2">
            <textarea id="new-comment-content" name="content" class="form-control card" rows="1" placeholder="Your new comment goes here!"></textarea>
            <input type="button" value="Post!" id="post-comment-btn" class="btn btn-purple">
        </div>

        <!-- Participants -->
        <div class="col-md-6 text-start">
            <div class="fw-bold">Going</div>
            <div class="mt-2" id="participants-avatar-container"></div>
        </div>
    </div>
    <!-- Hidden template for one avatar -->
    <template id="participant-avatar-template">
        <img class="user-avatar" src="" alt="" />
    </template>

    <!-- Comments & Gallery Row -->
    <div class="row text-start mt-3 gx-5">
        <div class="col-md-6 text-start">

            <template id="comment-template">
                <div class="comment-box">
                    <div class="d-flex gap-3">
                        <img class="user-avatar" src="" alt="User Avatar" />
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0 comment-username"></h6>
                                <span class="comment-time"></span>
                            </div>
                            <p class="mb-0"></p>
                            <div class="d-flex justify-content-end">
                                <div class="btn btn-warning edit-comment-btn" data-comment-id="">Edit</div>
                                <div class="btn btn-danger remove-comment-btn" data-comment-id="">Remove</div>
                            </div>
                        </div>
                    </div>
                </div>
            </template>

            <template id="edit-comment-template">
                <div class="edit-area">
                    <textarea class="form-control edit-textarea"></textarea>
                    <button class="btn btn-sm btn-success save-edit-btn">Save</button>
                    <button class="btn btn-sm btn-secondary cancel-edit-btn">Cancel</button>
                </div>
            </template>

            <div id="comments-list" class="comments-list"></div>
        </div>

        <!-- GALLERY -->
        <div class="col-md-6 mt-3 text-start">
            <div class="fw-bold">Photos & Videos</div>
            <div class="mt-2" id="media-thumbnail-container">
                <!-- Hidden input + visible "+" button -->
                <div class="single-media-container">
                    <div id="add-media-container" class="single-media-container add-media-button">
                        +
                        <input
                                type="file"
                                id="media-input"
                                name="mediumFile"
                                accept="image/*,video/*"
                                hidden
                        />
                    </div>
                </div>
                <!-- All media thumbnails go here, target media-thumbnail-container -->
            </div>
        </div>

        <template id="media-thumbnail-template">
            <div class="single-media-container"></div>
        </template>
    </div>

    <!-- CAROUSEL/MODAL FOR MEDIA -->
    <div class="modal fade" id="media-modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <div id="media-carousel" class="carousel slide">
                        <div class="carousel-inner"></div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#media-carousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#media-carousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <template id="carousel-slide-template">
        <div class="carousel-item">
            <img class="d-block w-100" hidden>
            <video class="d-block w-100" controls hidden></video>
        </div>
    </template>

</div>
